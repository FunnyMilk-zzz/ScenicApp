<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发布景区信息"
                    android:textSize="30sp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/apublish_scenic_et_title"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/edittext_radio_white"
                android:hint="景点标题"/>


            <EditText
                android:id="@+id/apublish_scenic_et_name"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/edittext_radio_white"
                android:hint="景区名"/>

            <EditText
                android:id="@+id/apublish_scenic_et_introduce"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_radio_white"
                android:singleLine="true"
                android:maxLines="2"
                android:hint="景区简介"/>

            <EditText
                android:id="@+id/apublish_scenic_et_imgurl"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/edittext_radio_white"
                android:hint="图片url"/>

            <EditText
                android:id="@+id/apublish_scenic_et_gps"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="2"
                android:background="@drawable/edittext_radio_white"
                android:hint="位置信息"/>



            <Button
                android:id="@+id/apublish_scenic_btn_submit"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布"
                android:background="@drawable/botton_submit"/>
        </LinearLayout>




    </LinearLayout>

</ScrollView>