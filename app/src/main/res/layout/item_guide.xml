<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fService_s1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/raidous_background_gray">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/item_guide_ic_guide"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_man"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/item_guide_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:text="张建国"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_guide_tv_duty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/item_guide_tv_name"
                android:text="黄果树/赤水河" />


            <View
                android:id="@+id/fService_line1"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="20dp"
                android:background="#A0A0A0"
                android:layout_below="@id/item_guide_ic_guide"/>

            <TextView
                android:id="@+id/item_guide_tv_city"
                android:layout_below="@id/fService_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="所在城市："/>
            <TextView
                android:id="@+id/item_guide_tv_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_guide_tv_city"
                android:text="出生年月："/>

            <TextView
                android:id="@+id/item_guide_tv_worktime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_guide_tv_age"
                android:text="带团时长："/>

            <TextView
                android:id="@+id/item_guide_tv_hobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_guide_tv_worktime"
                android:text="我的专长："/>
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>