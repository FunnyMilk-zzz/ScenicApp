<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/raidous_background_gray">

        <TextView
            android:id="@+id/item_Scenic_ticket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#242424"
            android:text="门票名"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#A0A0A0" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_Scenic_ticket_itemA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#242424"
                android:text="项目A"
                />
            <TextView
                android:id="@+id/item_Scenic_ticket_aPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_Scenic_ticket_itemA"
                android:textColor="#FF2222"
                android:text="项目A价格"/>

            <Button
                android:id="@+id/item_Scenic_ticket_btnA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/botton_submit"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:text="预定"/>
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_Scenic_ticket_itemB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#242424"
                android:text="项目B"
                />
            <TextView
                android:id="@+id/item_Scenic_ticket_bPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_Scenic_ticket_itemB"
                android:textColor="#FF2222"
                android:text="项目B价格"/>

            <Button
                android:id="@+id/item_Scenic_ticket_btnB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/botton_submit"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:text="预定"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>