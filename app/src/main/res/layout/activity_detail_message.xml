<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ListView
        android:divider="@null"
        android:id="@+id/listView_detail_message"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/raidous_background_gray">

        <TextView
            android:id="@+id/ac_detail_message_itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#242424"
            android:text="项目标题"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#A0A0A0" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/ac_detail_message_itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#242424"
                android:text="项目"
                />
            <TextView
                android:id="@+id/ac_detail_message_itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ac_detail_message_itemName"
                android:textColor="#FF2222"
                android:text="项目价格"/>

            <Button
                android:id="@+id/ac_detail_message_btn_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/botton_submit"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:text="预定"/>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>