<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发布导游信息"
                    android:textSize="30sp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/apublish_guide_et_name"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/edittext_radio_white"
                android:hint="导游名"/>


            <EditText
                android:id="@+id/apublish_guide_et_sex"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/edittext_radio_white"
                android:hint="性别"/>

            <EditText
                android:id="@+id/apublish_guide_et_age"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_radio_white"
                android:singleLine="true"
                android:inputType="number"
                android:maxLines="2"
                android:hint="年龄"/>

            <EditText
                android:id="@+id/apublish_guide_et_city"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/edittext_radio_white"
                android:hint="所在城市"/>

            <EditText
                android:id="@+id/apublish_guide_et_hobby"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="2"
                android:background="@drawable/edittext_radio_white"
                android:hint="专长"/>

            <EditText
                android:id="@+id/apublish_guide_et_introduce"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="2"
                android:background="@drawable/edittext_radio_white"
                android:hint="简介"/>

            <EditText
                android:id="@+id/apublish_guide_et_wordTime"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="2"
                android:background="@drawable/edittext_radio_white"
                android:hint="带团时间"/>

            <EditText
                android:id="@+id/apublish_guide_et_duty"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="2"
                android:background="@drawable/edittext_radio_white"
                android:hint="负责业务"/>
            <EditText
                android:id="@+id/apublish_guide_et_isOrder"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="2"
                android:background="@drawable/edittext_radio_white"
                android:text="未被预定"
                android:hint="是否被预定:"/>
            <EditText
                android:id="@+id/apublish_guide_et_price"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="2"
                android:inputType="number"
                android:background="@drawable/edittext_radio_white"
                android:hint="预定价格"/>
            <EditText
                android:id="@+id/apublish_guide_et_contactInformation"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="2"
                android:background="@drawable/edittext_radio_white"
                android:hint="联系方式"/>


            <Button
                android:id="@+id/apublish_guide_btn_submit"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布"
                android:background="@drawable/botton_submit"/>



        </LinearLayout>




    </LinearLayout>

</ScrollView>