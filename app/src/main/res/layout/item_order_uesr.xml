<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

 <LinearLayout
     android:background="@drawable/raidous_background_gray"
     android:padding="20dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:layout_marginStart="20dp"
     android:layout_marginEnd="20dp"
     android:layout_marginBottom="10dp"
     android:orientation="vertical">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:id="@+id/item_Order_user_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#000000"
             android:textSize="18sp"
             android:text="订单名"/>

         <TextView
             android:id="@+id/item_Order_user_Username"
             android:layout_centerVertical="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:text="下单人"/>
     </RelativeLayout>

     <LinearLayout
         android:orientation="vertical"
         android:layout_marginTop="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

         <TextView
             android:id="@+id/item_Order_user_orderDate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="下单时间"/>
         <TextView
             android:layout_marginTop="5dp"
             android:id="@+id/item_Order_user_bookDate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="预约时间"/>

     </LinearLayout>

     <RelativeLayout
         android:layout_marginTop="5dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:id="@+id/item_Order_user_orderId"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="订单号："/>
         <TextView
             android:id="@+id/item_Order_user_payIs"
             android:layout_below="@id/item_Order_user_orderId"
             android:layout_centerVertical="true"
             android:layout_alignParentEnd="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#FF7146"
             android:text="完成状态" />


         <TextView
             android:id="@+id/item_Order_user_price"
             android:layout_marginTop="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/item_Order_user_orderId"
             android:text="价格"/>
     </RelativeLayout>
 </LinearLayout>

</LinearLayout>