<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布旅游资讯"
                android:textSize="30sp"/>

        </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="35dp">

           <EditText
               android:id="@+id/apublic_message_et_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:maxLines="2"
               android:background="@drawable/edittext_radio_white"
               android:hint="标题"/>


           <EditText
               android:id="@+id/apublic_message_et_author"
               android:layout_marginTop="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:maxLines="1"
               android:background="@drawable/edittext_radio_white"
               android:hint="作者"/>

           <EditText
               android:id="@+id/apublic_message_et_introduce"
               android:layout_marginTop="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:maxLines="2"
               android:background="@drawable/edittext_radio_white"
               android:hint="资讯简介"/>

           <EditText
               android:id="@+id/apublic_message_et_imgurl"
               android:layout_marginTop="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:maxLines="2"
               android:background="@drawable/edittext_radio_white"
               android:hint="图片url"/>

           <EditText
               android:id="@+id/apublic_message_et_scid"
               android:layout_marginTop="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:background="@drawable/edittext_radio_white"
               android:hint="景区编号"/>

           <EditText
               android:id="@+id/apublic_message_et_body"
               android:layout_marginTop="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:lines="20"
               android:background="@drawable/edittext_radio_white"
               android:gravity="top|left"
               android:hint="正文"/>

           <Button
               android:id="@+id/apublic_message_btn_submit"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="发布"
               android:background="@drawable/botton_submit"/>
       </LinearLayout>




    </LinearLayout>

</ScrollView>